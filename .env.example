# Environment Configuration
# Copy this file to .env and update with your actual values

# Test Environment
# Options: development, staging, qa, production
TEST_ENV=development

# Application URLs
BASE_URL=http://localhost:3000
API_URL=http://localhost:3001/api

# Test User Credentials
# Standard User
TEST_USER_EMAIL=test.user@example.com
TEST_USER_PASSWORD=TestPassword123!

# Admin User
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=AdminPassword123!

# Editor User
EDITOR_USER_EMAIL=editor@example.com
EDITOR_USER_PASSWORD=EditorPassword123!

# Viewer User
VIEWER_USER_EMAIL=viewer@example.com
VIEWER_USER_PASSWORD=ViewerPassword123!

# Playwright Configuration
# Set to 'true' to run tests in headless mode
HEADLESS=false

# Number of parallel workers
WORKERS=4

# Number of retries on failure
RETRIES=0

# CI Environment
# Set to 'true' when running in CI/CD pipeline
CI=false

# Reporting
# Enable specific reporters
ENABLE_HTML_REPORT=true
ENABLE_ALLURE_REPORT=false

# Debug
# Enable debug logging
DEBUG=false
PWDEBUG=0

# Browser Configuration
# Browser channel (e.g., 'chrome', 'msedge', 'chromium')
BROWSER_CHANNEL=chrome

# Slow Motion (milliseconds)
# Slows down Playwright operations by specified milliseconds
SLOW_MO=0

# Video Recording
# Options: 'on', 'off', 'retain-on-failure', 'on-first-retry'
VIDEO=retain-on-failure

# Screenshots
# Options: 'on', 'off', 'only-on-failure'
SCREENSHOT=only-on-failure

# Trace
# Options: 'on', 'off', 'retain-on-failure', 'on-first-retry'
TRACE=retain-on-failure

# API Keys (if needed for testing)
# API_KEY=your_api_key_here
# SECRET_KEY=your_secret_key_here

# Third-party Service Configuration (if applicable)
# STRIPE_TEST_KEY=
# SENDGRID_API_KEY=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Database (if needed for test data setup)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=test_database
# DB_USER=test_user
# DB_PASSWORD=test_password

# Feature Flags
# Enable/disable specific features for testing
FEATURE_AUTHENTICATION=true
FEATURE_PAYMENTS=false
FEATURE_ANALYTICS=false
